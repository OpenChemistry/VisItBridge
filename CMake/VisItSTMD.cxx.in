#include "@PLUGIN_NAME@.h"
#include "vtkInformation.h"
#include "vtkInformationVector.h"
#include "vtkObjectFactory.h"
#include "vtkMultiBlockDataSet.h"

#include "@ARG_VISIT_READER_NAME@.h"
#include "avtDatabaseMetaData.h"
#include "avtMeshMetaData.h"
#include "avtVariableCache.h"

vtkStandardNewMacro(@PLUGIN_NAME@);

//-----------------------------------------------------------------------------
@PLUGIN_NAME@::@PLUGIN_NAME@()
{
  this->FileName = 0;
}

//-----------------------------------------------------------------------------
@PLUGIN_NAME@::~@PLUGIN_NAME@()
{
  this->SetFileName(0);
}
//-----------------------------------------------------------------------------
int @PLUGIN_NAME@::CanReadFile(const char *fname)
{
  int ret = 0;
  if ( this->AvtFile )
    {
    delete this->AvtFile;
    this->AvtFile = NULL;
    }

  try
    {
    this->AvtFile = new @ARG_VISIT_READER_NAME@(fname);
    ret = 1;
    }
  catch(...)
    {
    this->AvtFile = NULL;
    ret = 0;
    }
  return ret;
}

//-----------------------------------------------------------------------------
bool @PLUGIN_NAME@::InitializeAVTReader( )
{
 if (!this->MetaData)
    {
    this->MetaData = new avtDatabaseMetaData( );
    }

  if (!this->Cache)
    {
    this->Cache = new avtVariableCache( );
    }

  if (!this->AvtFile)
    {
    if (this->CanReadFile(this->FileName))
      {
      this->AvtFile->SetDatabaseMetaData( this->MetaData );
      this->AvtFile->SetCache( this->Cache );
      }
    else
      {
      return false;
      }
    }

  return true;
}


//-----------------------------------------------------------------------------
void @PLUGIN_NAME@::PrintSelf(ostream& os, vtkIndent indent)
{
  this->Superclass::PrintSelf(os, indent);
}


